<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginTop="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    app:cardBackgroundColor="@color/default_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    tools:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- First Row: Emoji + Mood Text -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Larger Emoji -->

            <TextView
                android:id="@+id/moodEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="ðŸ˜ƒ"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- "I am" Line -->
                <TextView
                    android:id="@+id/mood_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am"
                    android:textColor="@color/text_colour2"
                    android:textSize="18sp" />

                <!-- Larger "Happy" -->
                <TextView
                    android:id="@+id/emotionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    android:textColor="#000"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/socialSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_colour2"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Right Side: Date & Action -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/dateAns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feb 9, 2025"
                        android:textColor="#333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timeAns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 AM"
                        android:textColor="@color/text_colour2"
                        android:textSize="18sp" />

                </LinearLayout>
            </FrameLayout>

            <!-- Three-dot edit/delete menu icon-->
            <ImageView
                android:id="@+id/mood_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_baseline_more_vert_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/triggerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet a dog"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageBase64"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
